{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "declaration": true,
    "lib": ["esnext", "dom", "dom.iterable", "ScriptHost"],
    "jsx": "preserve",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "types": ["node", "vite/client"]
  },
  "include": ["src/**/*.ts", "src/**/*.vue"],
  "exclude": ["node_modules", "dist", "**/*.js"]
}
